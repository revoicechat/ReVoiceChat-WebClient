{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "RevoiceChat",
  "version": "0.1.0",
  "identifier": "fr.revoicechat.desktop",
  "build": {
    "frontendDist": "../www"
  },
  "app": {
    "windows": [
      {
        "title": "RevoiceChat",
        "width": 1024,
        "height": 720,
        "resizable": true,
        "fullscreen": false,
        "maximized": true
      }
    ],
    "security": {
      "capabilities": ["default"],
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "android": {
      "minSdkVersion": 24
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
